<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F0"
    tools:context=".LabinfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Имя разработчика -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Разработчик: Антонюк Н.А."
                android:textSize="14sp"
                android:layout_gravity="left"
                android:textColor="#88FF0404"
                android:paddingBottom="12dp" />

            <!-- Заголовок -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Практическое задание"
                android:textSize="20sp"
                android:textColor="#FF4081"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="16dp" />

            <!-- Основной текст -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Принципы работы c жестами, вводимыми пользователями:\n\n- Представление в приложении дополнительной справочной информации (текст о назначении приложения).\n\n- Вывод различных информационных сообщений после соответствующих жестов пользователя.\n\n- Подготовка сценария управления приложением с помощью жестов пользователя.\n\n- Возможность навигации по приложению с помощью набора жестов пользователя."
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingTop="4dp"
                android:lineSpacingExtra="8dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
